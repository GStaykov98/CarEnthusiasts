@model ForumTopicDeleteViewModel
@{
    ViewBag.Title = "Delete topic";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Title</h3>
                <p class="text-danger mt-3">"Are you sure you want to delete this topic?"</p>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteTopicConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    <a asp-action="Home" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
