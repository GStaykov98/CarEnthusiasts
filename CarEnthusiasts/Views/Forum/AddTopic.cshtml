@model ForumTopicFormViewModel
@{
    ViewBag.Title = "Start a new topic";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="AddTopic" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label-add-edit">Topic Title</label>
                <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Text" class="form-label-add-edit">Text</label>
                <input asp-for="@Model.Text" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Text" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.TopicType" class="form-label-add-edit">Select Category</label>
                <select asp-for="@Model.TopicType" class="form-control" aria-required="true">
                    <option disabled selected value="">Select Category...</option>
                    @foreach (var topicType in Model.TopicTypes)
                    {
                            <option value="@topicType">@topicType</option>
                    }
                </select>
                <span asp-validation-for="@Model.TopicType" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Add topic" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}

