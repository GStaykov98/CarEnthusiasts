@model IEnumerable<CarBrandsViewModel>
@{
    ViewBag.Title = "All car brands";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var e in Model)
    {
            <div class="card" style="width: 8rem;">
                  <img src="@e.ImageUrl" class="card-img-top" width="200" height="100" alt="Brand Image">
               <div class="card-body">
                   <p class="card-text">@e.Name</p>
                           <form class="input-group-sm " asp-controller="CarInformation" asp-action="AllModels" asp-route-id="@e.Id">
                            <input type="submit" value="Select" class="btn btn-primary" />
                    </form>
              </div>
             </div>
    }

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}