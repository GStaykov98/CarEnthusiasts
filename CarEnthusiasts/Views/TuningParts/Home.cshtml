@model IEnumerable<TuningPartCategoryViewModel>

@{
    ViewBag.Title = "Choose a category";
}


<h2 class="text-center">@ViewBag.Title</h2>

<div class="row">
    @foreach (var category in Model)
    {
        <div class="card" style="width: 25rem;">
            <img src="@category.ImageUrl" class="card-img-top" alt="Category image">
            <div class="card-body">
                <h5 class="card-title">@category.Name</h5>
                <form class="input-group-sm" asp-controller="TuningParts" asp-action="Category" asp-route-id="@category.Id">
                    <button type="submit" class="btn btn-primary">Select</button>
                </form>
            </div>
        </div>
    }
</div>