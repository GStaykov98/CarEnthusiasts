@model IEnumerable<ReviewViewModel>

@foreach (var review in Model)
{
                <a asp-controller="News" asp-action="ReviewInformation" asp-route-id="@review.Id">
                    <div class="card" style="width: 18rem;">
                      <img src="@review.ImageUrl" class="card-img-top" alt="Review image">
                  <div class="card-body">
                        <h5 class="card-title">@review.Title</h5>
                  </div>
                </div>
                </a>
}