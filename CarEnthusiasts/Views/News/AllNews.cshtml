@model IEnumerable<NewsViewModel>

@foreach (var news in Model)
{
            <a asp-controller="CarInformation" asp-action="AllCars">
                <div class="card" style="width: 18rem;">
              <img src="@news.ImageUrl" class="card-img-top" alt="News image">
              <div class="card-body">
                <h5 class="card-title">@news.Title</h5>
              </div>
            </div>
            </a>
}

<a asp-asp-controller="CarInformation" asp-action="AllModels">
    <button type="button" class="btn btn-outline-primary">More news</button>
</a>