@model DeleteCommentViewModel
@{
    ViewBag.Title = "Delete comment";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Text</h3>
                <p class="text-danger mt-3">"Are you sure you want to delete this comment?"</p>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    @if (Model.NewsId != null)
                    {
                        <a asp-action="NewsInformation" asp-route-id="@Model.NewsId" class="btn btn-secondary">Cancel</a>
                    }
                    else
                    {
                        <a asp-action="ReviewInformation" asp-route-id="@Model.ReviewId" class="btn btn-secondary">Cancel</a>
                    }
                </form>
            </div>
        </div>
    </div>
</div>
